{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "allowJs": false,
    "strict": true,
    "strictPropertyInitialization": false,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2017",
    "module": "esnext",
    "lib": [
      "es2017",
      "dom"
    ],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@finlab/contracts": [
        "libs/contracts/src/index.ts"
      ],
      "@finlab/contracts/work-time": [
        "libs/contracts/src/work-time.ts"
      ],
      "@finlab/helpers": [
        "libs/helpers/src/index.ts"
      ],
      "@finlab/interfaces": [
        "libs/interfaces/src/index.ts"
      ],
      "@finlab/interfaces/work-time": [
        "libs/interfaces/src/work-time.ts"
      ],
    }
  },
  "exclude": [
    "node_modules",
    "tmp"
  ]
}
